<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_school_class_tree" model="ir.ui.view">
        <field name="name">school_class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="Classes">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school_class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Classes">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">School Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_school_class_tree"/>
    </record>
            <!-- Sub Menu Item under 'EMS' for Classes -->
<menuitem id="menu_school_class"
              name="Classes"
              parent="menu_students_root"
              action="action_school_class"
              sequence="2"/>


    <!-- Tree View for Medium -->
    <record id="view_school_medium_tree" model="ir.ui.view">
        <field name="name">school_medium.tree</field>
        <field name="model">school.medium</field>
        <field name="arch" type="xml">
            <tree string="Medium">
                <field name="medium"/>
            </tree>
        </field>
    </record>

    <!-- Form View  form Medium-->
    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school_medium.form</field>
        <field name="model">school.medium</field>
        <field name="arch" type="xml">
            <form string="Medium">
                <sheet>
                    <group>
                        <field name="medium"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_school_medium" model="ir.actions.act_window">
        <field name="name">School Medium</field>
        <field name="res_model">school.medium</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_school_medium_tree"/>
    </record>
            <!-- Sub Menu Item under 'EMS' for Classes -->
<menuitem id="menu_school_medium"
              name="Medium"
              parent="menu_students_root"
              action="action_school_medium"
              sequence="3"/>
</odoo>