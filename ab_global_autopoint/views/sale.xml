<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="before">
                <button name="button_validator1" string="Validate" type="object" class="btn-primary"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="job_card_no" domain="[('state', '=', 'requisition')]"
                       options='{"no_create": True,"no_open": True}'
                       groups="ab_global_autopoint.user,base.group_erp_manager"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="vehicle_num" groups="ab_global_autopoint.user,base.group_erp_manager"
                       options="{'no_create': True}"/>
                <!--                <field name="requisition_id" options='{"no_create": True,"no_open": True}'  groups="ab_global_autopoint.user,base.group_erp_manager"/>-->
                <!--           after option in requisitin id     domain="[('bill_status', '=', 'to bill')]"-->

                <!--                <field name="transfer_id" options='{"no_create": True,"no_open": True}' domain="[('name', 'ilike', '%WHGAP/INT%'),('bill_status', '=', 'to bill')]" groups="ab_global_autopoint.user,base.group_erp_manager"/>-->
            </xpath>
            <xpath expr="//field[@name='date_order'][@groups='base.group_no_one'] " position="attributes">
                <attribute name="groups"/>
            </xpath>
            <xpath expr="//group[@name='order_details']/div[1]" position="attributes">
                <attribute name="groups"/>
            </xpath>
        </field>
    </record>
    <record id="view_sales_order_tree_auto" model="ir.ui.view">
        <field name="name">Sales Order Tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="vehicle_num" groups="ab_global_autopoint.user,base.group_erp_manager"/>
            </xpath>
        </field>
    </record>

    <record id="view_sales_quotation_tree_auto" model="ir.ui.view">
        <field name="name">Sales Quotation Tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="vehicle_num" groups="ab_global_autopoint.user,base.group_erp_manager"/>
            </xpath>
        </field>
    </record>

