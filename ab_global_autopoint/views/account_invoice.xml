<?xml version="1.0"?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">agreement.customer.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="vehicle_num" groups="ab_global_autopoint.user,base.group_erp_manager"/>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="transcation_date" groups="ab_global_autopoint.user,base.group_erp_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
