<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view"
			id="vehicle_creation_form_view">
			<field name="name">Vehicles</field>
			<field name="model">vehicle.create</field>
			<field name="arch" type="xml">
				<form string="Vehicle">
					<sheet>
					<div class="oe_button_box" name="button_box">
						<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
							<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
						</button>
					</div>
						<field name="image" widget="image" class="oe_avatar" />
						<div class="oe_title">
							<label for="vehicle_no" />
							<h1>
								<field name="vehicle_no" style="width:150%%" />
							</h1>
						</div>
						<group>
							<group>
								<field name="owner_id" options='{"no_create": True,"no_open": True}'/>
								<field name="name" />
								<field name="model_no" />
								<field name="chasis_no" />
							</group>
							<group>
								<field name="make_id" />
								<field name="odometer"/>
								<field name="insurance_company"/>
								<field name="insurance_validity"/>
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
<!--                    	<field name="message_follower_ids" widget="mail_followers" />-->
<!--                    	<field name="message_ids" widget="mail_thread" />-->
                	</div>
				</form>
			</field>
		</record>

		<record id="vehicle_kanban_view" model="ir.ui.view">
            <field name="name">vehicle.kanban</field>
            <field name="model">vehicle.create</field>
            <field name="arch" type="xml">
                <kanban class="o_re_partner_kanban">
                    <field name="name"/>
                    <field name="owner_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong>
                                        <span t-if="record.name.value">
                                            <field name="owner_id"/>
                                        </span>
                                        <ul>
                                            <li>
                                                Model :
                                                <field name="name" style="color:red"/>
                                            </li>
                                            <li>
                                                Number :
                                                <field name="vehicle_no"/>
                                            </li>
                                            <li>
                                                Chasis No. :
                                                <field name="chasis_no"/>
                                            </li>
                                            <li>
                                                Model No. :
                                                <field name="model_no"/>
                                            </li>
                                        </ul>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

		 <!--Search View for the Vehicle-->
		<record id="vehicle_search" model="ir.ui.view">
		   <field name="name">vehicle.search</field>
		   <field name="model">vehicle.create</field>
		   <field name="arch" type="xml">
			  <search string="Search Vehicles">
				 <field name="owner_id" filter_domain="[('owner_id.name', 'ilike', self)]"/>
				 <field name="vehicle_no" filter_domain="[('vehicle_no', 'ilike', self)]"/>
				 <field name="name" filter_domain="[('name', 'ilike', self)]"/>
				 <field name="model_no" filter_domain="[('model_no', 'ilike', self)]"/>
			  </search>
		   </field>
		</record>

		<record id="vehicle_template_action" model="ir.actions.act_window">
		   <field name="name">Vehicle</field>
		   <field name="type">ir.actions.act_window</field>
		   <field name="res_model">vehicle.create</field>
		<field name="view_mode">tree,form,kanban</field>
		   <field name="view_id" ref="vehicle_kanban_view" />
		   <field name="help" type="html">
			  <p class="oe_view_nocontent_create">
				 Click to define a new Vehicle.
			  </p>
		   </field>
		</record>

		<menuitem id="main_vehicle_creation_menu" name="Vehicles" parent="global_auto_servicing" action="vehicle_template_action" sequence="8" />

		<record model="ir.ui.view"
		   id="vehicle_make_form_view">
		   <field name="name">Vehicle Make</field>
		   <field name="model">vehicle.make</field>
		   <field name="arch" type="xml">
			  <form string="Vehicle Make">
				 <sheet>
					<field name="image" widget="image" class="oe_avatar" />
					<div class="oe_title">
					   <label for="name" />
					   <h1>
						  <field name="name" style="width:100%%" />
					   </h1>
					</div>
				 </sheet>
				 <div class="oe_chatter">
<!--						   <field name="message_follower_ids" widget="mail_followers" />-->
<!--						   <field name="message_ids" widget="mail_thread" />-->
					   </div>
			  </form>
		   </field>
		</record>
		<record id="vehicle_make_tree" model="ir.ui.view">
			   <field name="name">vehicle.make.tree</field>
			   <field name="model">vehicle.make</field>
			   <field name="arch" type="xml">
				   <tree string="Vehicle Make">
					   <field name="name"/>
			  </tree>
			   </field></record>
		<record id="vehicle_make_action" model="ir.actions.act_window">
		   <field name="name">Vehicle Make</field>
		   <field name="type">ir.actions.act_window</field>
		   <field name="res_model">vehicle.make</field>
		<field name="view_mode">tree,form</field>
		   <field name="view_id" ref="vehicle_make_tree" />
		   <field name="help" type="html">
			  <p class="oe_view_nocontent_create">
				 Click to define a new Vehicle Make.
			  </p>
		   </field>
		</record>
		<menuitem id="main_vehicle_make_menu"
				  name="Vehicle Make"
				  parent="base.menu_custom"
				  action="vehicle_make_action"
				  sequence="-1" />
	</data>
</odoo>