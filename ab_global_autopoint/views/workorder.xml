<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <!--tree view of the Joborder-->
    <record id="view_job_order_tree" model="ir.ui.view">
        <field name="name">job.order.tree</field>
        <field name="model">job.order</field>
        <field name="arch" type="xml">
            <tree string="Joborder" default_order='name desc'>
                <field name="name"/>
                <field name="date_in"/>
                <field name="customer_id"/>
                <field name="mobile"/>
<!--                <field name="address"/>-->
                <field name="vehicle_id"/>
                <field name="odometer"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

     <!--form view of the Joborder-->
    <record id="joborder_form" model="ir.ui.view">
        <field name="name">job.order.form</field>
        <field name="model">job.order</field>
        <field name="arch" type="xml">
            <form string="Joborder">
                 <header>
                     <button name="action_requisition" type="object" string="Allow Requisition" class="oe_highlight" states="draft"/>
                     <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                     <button name="action_set_to_requisition" type="object" string="Need Requisition" states="requisition"/>
                     <button name="action_done" type="object" string="Done" class="oe_highlight"
                            attrs="{'invisible': 1}"/>
                     <button name="action_cancel" string="Cancel" type="object"
                      states="to request"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to request"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Customer Information">
                            <field name="customer_id" options='{"no_create": True,"no_open": True}'/>
                            <field name="contact_person"/>
                            <field name="address"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                        <group string="Vehicle Information">
                            <field name="vehicle_id" options='{"no_create": True,"no_open": True}'/>
                            <field name="model_no"/>
                            <field name="chasis_no"/>
                            <field name="insurance_company"/>
                            <field name="insurance_validity"/>
                        </group>
                        <group string="KM In Information" colspan="4">
                            <group>
                                <field name="last_odometer"/>
                            </group>
                            <group>
                                <field name="odometer"/>
                            </group>
                        </group>
                        <group string="Appointment Information" colspan="4">
                            <group>
                                <field name="appointment"/>
                            </group>
                            <group>
                                <field name="estimate"/>
                            </group>
                            <group>
                                <field name="dq_no"/>
                            </group>
                            <group>
                                <field name="done_by"/>
                            </group>
                        </group>
                        <group string="Payment And Delivery Information" colspan="4">
                            <group>
                                <field name="date_in"/>
                                <field name="service_type"/>
                                <field name="time" widget="timepicker"/>
<!--                                <field name="result_time"/>-->
                            </group>
                            <group>
                                <field name="date_out"/>
                                <field name="payment_method"/>
                            </group>
                        </group>
                    </group>
                    <group string="Instructions Details">
                        <notebook>
                            <page string="Instructions">
                                <group>
                                    <group>
                                        <field name="job_instruction"/>
                                    </group>
                                    <group>
                                       <field name="technician_report"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Additional Job (if Any)">
                                <group>
                                    <group>
                                        <field name="additional_job"/>
                                    </group>
                                    <group>
                                        <field name="revised_del_date"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Parts Ordered (if Any)">
                               <field name="ordered_part_lines">
                                   <tree editable="bottom">
                                       <field name="part_id" options='{"no_create": True,"no_open": True}'/>
                                       <field name="order_id" invisible="1"/>
                                   </tree>
                               </field>
                            </page>
                        </notebook>
                    </group>
                    <group string="Technician Details">
                         <group>
                             <field name="job_start_time"/>
                             <field name="technician_id" options='{"no_create": True,"no_open": True}'/>
                        </group>
                        <group>
                            <field name="job_completion_time"/>
                            <field name="recommendation"/>
                        </group>
                    </group>
                    <group string="Supervisor Details">
                        <group>
                            <field name="job_taking_supervisor_id" options='{"no_create": True,"no_open": True}'/>
                            <field name="supervisor_remarks"/>
                        </group>
                        <group>
                            <field name="final_inspecting_supervisor_id" options='{"no_create": True,"no_open": True}' />
                            <field name="inspector_remarks"/>
                        </group>
                    </group>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers" />-->
<!--                    <field name="message_ids" widget="mail_thread" />-->
<!--                </div>-->
            </form>
        </field>
     </record>

    <!--Search View for the Job Order-->
    <record id="joborder_search" model="ir.ui.view">
        <field name="name">joborder.search</field>
        <field name="model">job.order</field>
        <field name="arch" type="xml">
            <search string="Search Joborders">
                <field name="customer_id" filter_domain="[('customer_id.name', 'ilike', self)]"/>
                <field name="vehicle_id" filter_domain="[('vehicle_id.vehicle_no', 'ilike', self)]"/>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

      <!--action of the workorder menu-->
    <record id="action_joborder" model="ir.actions.act_window">
    <field name="name">Joborder</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">job.order</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_job_order_tree"/>
    <field name="help" type="html">
        <p>
            Create your First Joborder !
        </p>
    </field>
</record>


    <!--creating menus-->
    <menuitem id="ab_global_auto_root"
              name="Global Auto"
              sequence="1" />
    <menuitem id="global_auto_servicing"
              name="Servicing"
              parent="ab_global_auto_root"
              sequence="1"/>
    <menuitem id="global_auto_reports"
              name="Reports"
              parent="ab_global_auto_root"
              sequence="2"/>
    <menuitem id="ab_global_autopoint_servicing_joborder"
              name="Job Orders"
              parent="global_auto_servicing"
              sequence="1"/>
<!--              action="action_joborder" -->

    <!--creating customer menu-->
    <menuitem id="menu_global_auto_customer_form"
              name="Customers"
              parent="global_auto_servicing"
              action="base.action_partner_customer_form" sequence="2"/>
              sequence="2"/>

</odoo>
