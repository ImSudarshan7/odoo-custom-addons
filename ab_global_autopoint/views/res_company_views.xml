<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_inherit" model="ir.ui.view">
        <field name="name">res.company.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='favicon']" position="after">
                <field name="image_field_1" widget="image" class="float-left oe_avatar" />
                <field name="image_field_2" widget="image" class="float-left oe_avatar" />
                <field name="image_field_3" widget="image" class="float-left oe_avatar" />
            </xpath>
        </field>
    </record>
</odoo>