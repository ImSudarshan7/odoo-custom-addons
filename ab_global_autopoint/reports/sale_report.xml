<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        //Reprt action defination
        <record id="report_quotation" model="ir.actions.report">
            <field name="name">Print Quotation</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ab_global_autopoint.report_sale_quotation</field>
            <field name="report_file">ab_global_autopoint.report_sale_quotation</field>
            <field name="print_report_name">'Quotation - %s' % (object.name)</field>
        </record>

        //Paper format definition
        <record id="paperformat_abgroup_quotation" model="report.paperformat">
			<field name="name">Custom Paper</field>
			<field name="default" eval="True" />
			<field name="format">A4</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">40</field>
			<field name="margin_bottom">32</field>
			<field name="margin_left">10</field>
			<field name="margin_right">10</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">32</field>
			<field name="dpi">90</field>
		</record>

//linking the paper format to the report
    <record id="ab_global_autopoint.report_quotation" model="ir.actions.report">
            <field name="report_name">ab_global_autopoint.report_sale_quotation</field>
            <field name="paperformat_id" ref="ab_global_autopoint.paperformat_abgroup_quotation"/>
        </record>


        <template id="external_layout_quotation">
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>
			<t t-call="ab_global_autopoint.external_layout_quotation_header" />
			<t t-raw="0" />
		</template>

        <template id="external_layout_quotation_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-12" style="font-size:16px">

                    </div>
                </div>
            </div>
		  </template>
    </data>
</odoo>