<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="job_order_summary_wizard" model="ir.ui.view">
            <field name="name">joborder.summary.report.wizard</field>
            <field name="model">joborder.summary</field>
            <field name="arch" type="xml">
                <form string="Vehicle Flow Excel Report">
                    <field name="state" invisible="1"/>
                    <div states="get">
                         <group>
                            <field name="report_data" colspan="4" invisible="1"/>
                            <field name="file_name" filename="report_data" colspan="4"/>
                        </group>
                    </div>
                    <div states="choose">
                        <group>
                            <group>
                                <field name="start_date" />
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="make_id" options='{"no_create": True,"no_open": True}'/>
                            </group>
                        </group>
                    </div>
                    <footer states="choose">
                        <button string="Generate Report"
                            class="btn-primary"
                            name="action_joborder_summary_report"
                            type="object"/>
                        <button string="Cancel"
                            class="btn-default"
                            special="cancel" />
                    </footer>
                    <footer states="get">
                    <button special="cancel" string="OK" class="oe_highlight" />
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_joborder_summary_xls" model="ir.actions.act_window">
            <field name="name">Vehicle Flow Excel Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">joborder.summary</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="job_order_summary_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Vehicle Flow Report"
                  id="vehicle_flow_report_child_menu"
                  parent="ab_global_autopoint.global_auto_reports"
                  sequence="1" groups="ab_global_autopoint.user,base.group_erp_manager"
                  action="action_view_joborder_summary_xls"/>
</odoo>
