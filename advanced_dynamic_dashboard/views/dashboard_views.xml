<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  The client action record to view the Dashboard -->
    <record id="dashboard_menu_root_action" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">advanced_dynamic_dashboard</field>
    </record>
    <menuitem id="dashboard_menu_root_menu" name="Dashboards" action="dashboard_menu_root_action"
              web_icon="advanced_dynamic_dashboard,static/description/icon.png" sequence="-1"/>
    <menuitem id="dashboard_menu_sub_menu" name="Dashboards Tile" action="action_dashboard_view" groups="base.group_no_one"
              sequence="-1"/>
</odoo>
