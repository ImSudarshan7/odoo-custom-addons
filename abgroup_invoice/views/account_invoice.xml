<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Inherit Customer Invoice Form view -->
        <record id="account_invoice_abgroup_inherit" model="ir.ui.view">
            <field name="name">agreement.customer.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='preview_invoice']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_invoice_sent']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_invoice_sent']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="after">
                    <field name="first_invoice" invisible="1"/>
                    <field name="invoice_count" invisible="1"/>
<!--                    <button name="print_invoice" string="Print Invoice" type="object" attrs="{'invisible': [('first_invoice', '=', True)]}" groups="base.group_user"/>-->
<!--                    <button name="duplicate_invoice" string="Duplicate Invoice" type="object" attrs="{'invisible': [('first_invoice', '=', False)]}" groups="base.group_user"/>-->
                </xpath>
            </field>
        </record>

        <!--Inherit Customer Invoice sale Form view -->
        <record id="view_customer_invoice_sale_abgroup_inherit" model="ir.ui.view">
            <field name="name">view.customer.sale.invoice.abgroup.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="sale.account_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>