<odoo>
    <record id="view_audit_session_tree" model="ir.ui.view">
        <field name="name">audit.session.tree</field>
        <field name="model">audit.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="session_date" optional="hide"/>
                <field name="name"/>
                <field name="auditor_id"/>
                <field name="location_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_audit_session_form" model="ir.ui.view">
        <field name="name">audit.session.form</field>
        <field name="model">audit.session</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="start_audit" string="Start Audit" type="object" states="draft" class="btn-primary"/>
                    <button name="complete_audit" string="Complete Audit" type="object" states="in_progress" class="btn-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" invisible="1" readonly="1"/>
                        <field name="auditor_id" readonly="1" force_save="1"/>
                        <field name="location_id" readonly="1" force_save="1"/>
                        <field name="session_date" invisible="1" readonly="1"/>
                        <field name="start_date" readonly="1"/>
                        <field name="end_date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Audit Lines">
                            <field name="session_line_ids" nolabel="1" widget="one2many_list" context="{'default_session_id': active_id}">
                                <tree editable="bottom" create="0" delete="0" decoration-danger="audit_status == 'pending'" decoration-success="audit_status == 'verified'" decoration-warning="audit_status in ['mismatch_excess', 'mismatch_short']">
                                    <field name="item_id" readonly="1"/>
                                    <field name="system_qty" readonly="1"/>
                                    <field name="audited_qty" attrs="{'readonly': [('state', '=', 'audited')]}" />
                                    <field name="audit_status" readonly="1"/>
                                    <field name="remarks" attrs="{'readonly': [('state', '=', 'audited')]}" />
                                    <field name="state" readonly="1"/>
                                    <button string="Mark as Audited" type="object" name="mark_as_audited" icon="fa-check-circle" attrs="{'invisible': [('state', '=', 'audited')]}" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_audit_session_calendar" model="ir.ui.view">
        <field name="name">audit.session.calendar</field>
        <field name="model">audit.session</field>
        <field name="arch" type="xml">
            <calendar date_start="session_date" color="state" mode="month">
                <field name="name"/>
                <field name="state"/>
                <field name="auditor_id"/>
                <field name="location_id"/>
            </calendar>
        </field>
    </record>

    <record id="action_audit_session" model="ir.actions.act_window">
        <field name="name">Audit Sessions</field>
        <field name="res_model">audit.session</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>
</odoo>
