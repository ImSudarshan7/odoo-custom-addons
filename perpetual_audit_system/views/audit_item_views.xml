<odoo>
    <record id="view_audit_item_tree" model="ir.ui.view">
        <field name="name">audit.item.tree</field>
        <field name="model">audit.item</field>
        <field name="arch" type="xml">
            <tree decoration-danger="last_audit_status == 'pending'" decoration-success="last_audit_status == 'verified'" decoration-warning="last_audit_status in ['mismatch_excess', 'mismatch_short']">
                <field name="item_code"/>
                <field name="item_name"/>
                <field name="item_category"/>
                <field name="item_type"/>
                <field name="bin_no"/>
                <field name="mrp_amount"/>
                <field name="inventory_qty"/>
                <field name="scale_unit"/>
                <field name="total_value"/>
                <field name="last_sync_date"/>
                <field name="last_audit_date"/>
                <field name="last_audit_status"/>
                <field name="auditor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_audit_item_form" model="ir.ui.view">
        <field name="name">audit.item.form</field>
        <field name="model">audit.item</field>
        <field name="arch" type="xml">
            <form string="Audit Item">
                <sheet>
                    <group>
                        <group>
                            <field name="item_code"/>
                            <field name="item_name"/>
                            <field name="item_category"/>
                            <field name="item_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General Information">
                            <group>
                                <group>
                                    <field name="mrp_amount" widget="float" readonly="0"/>
                                    <field name="inventory_qty" widget="float" readonly="0"/>
                                    <field name="total_value"/>
                                    <field name="scale_unit" readonly="0"/>
                                </group>
                                <group>
                                    <field name="bin_no" readonly="0"/>
                                    <field name="last_sync_date" readonly="0"/>
                                    <field name="is_assigned" readonly="0"/>
                                </group>
                            </group>
                        </page>
                        <page string="Audit Details">
                            <group>
                                <group>
                                    <field name="last_audit_date" readonly="0"/>
                                    <field name="last_audit_status" readonly="0"/>
                                    <field name="audit_not_required"/>
                                </group>
                                <group>
                                    <field name="location_id" readonly="0"/>
                                    <field name="auditor_id" readonly="0"/>
                                </group>
                            </group>
                        </page>
                        <page string="Audit Log">
                            <field name="audit_log_ids" nolabel="1">
                                <tree string="Audit Log">
                                    <field name="audit_date"/>
                                    <field name="auditor_id"/>
                                    <field name="system_qty"/>
                                    <field name="audited_qty"/>
                                    <field name="audit_status"/>
                                    <field name="remarks"/>
                                </tree>
                                <form string="Audit Log Details">
                                    <group>
                                        <field name="audit_date" readonly="0"/>
                                        <field name="auditor_id" readonly="0"/>
                                    </group>
                                    <group>
                                        <field name="system_qty" readonly="0"/>
                                        <field name="audited_qty" readonly="0"/>
                                        <field name="audit_status" readonly="0"/>
                                    </group>
                                    <group>
                                        <field name="remarks" readonly="0"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_audit_item" model="ir.actions.act_window">
        <field name="name">Audit Items</field>
        <field name="res_model">audit.item</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_audit_log_tree" model="ir.ui.view">
        <field name="name">audit.log.tree</field>
        <field name="model">audit.log</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="item_id"/>
                <field name="audit_date"/>
                <field name="auditor_id"/>
                <field name="audit_status"/>
                <field name="remarks"/>
            </tree>
        </field>
    </record>

    <record id="view_audit_log_action" model="ir.actions.act_window">
        <field name="name">Audit Log</field>
        <field name="res_model">audit.log</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
